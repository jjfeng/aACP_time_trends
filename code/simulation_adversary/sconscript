import os

from os.path import join
from nestly.scons import SConsWrap
from nestly import Nest
from SCons.Script import Environment, Command, AddOption
import numpy as np

Import('env')
localenv = env.Clone()

nest = SConsWrap(Nest(), localenv['output'], alias_environment=localenv)

DENSITY = "bernoulli"
NUM_P = 40
INIT_BATCH_SIZE = 75
BATCH_SIZE = 75
NUM_BATCHES = 50
TRAIN_NUM_BATCHES = 1
CONTROL_FACTOR = 1.6
CONSTRAINT_FACTOR = 0.2
CI_ALPHA = 0.1

NUM_COEFS = 15
COEF_SCALE = 10

YMAX = 0.35
RUN_STATUS = localenv['clusters']
NUM_SEEDS = localenv['num_seeds']

nest.add(
    'is_debug',
    [RUN_STATUS])

nest.add(
    'num_drift',
    [5],
    label_func=lambda c: 'num_drift_%d' % c)

nest.add(
    'revert_drift',
    [0],
    label_func=lambda c: 'revert_drift_%.2f' % c)

nest.add_aggregate('all_hists', list)

nest.add(
    'seed',
    range(NUM_SEEDS),
    label_func=lambda c: 'seed_%d' % c)

@nest.add_target_with_env(localenv)
def create_nature(env, outdir, c):
    targets = [
        join(outdir, 'nature.pkl'),
        join(outdir, 'nature_log.txt')]
    cmd = [
        'python run_script.py',
        c['is_debug'],
        '${TARGETS[0]}',
        'create_adversarial_nature.py',
        '--density-parametric',
        DENSITY,
        '--first-batch',
        INIT_BATCH_SIZE,
        '--batch-size',
        BATCH_SIZE,
        '--prob-revert-drift',
        c['revert_drift'],
        '--num-coef-drift',
        c['num_drift'],
        '--num-coefs',
        NUM_COEFS,
        '--coef-scale',
        COEF_SCALE,
        '--num-batches',
        NUM_BATCHES,
        '--num-p',
        NUM_P,
        '--seed',
        c['seed'],
	'--out-file ${TARGETS[0]}',
	'--log-file ${TARGETS[1]}']
    return env.Command(
        targets,
        [],
        ' '.join(map(str, cmd)))

@nest.add_target_with_env(localenv)
def create_proposer(env, outdir, c):
    # TODO: create a lasso proposer that only trains on the most recent data
    targets = [
        join(outdir, 'proposer.pkl'),
        join(outdir, 'proposer_log.txt')]
    batches = [TRAIN_NUM_BATCHES] * (NUM_BATCHES + 1)
    cmd = [
        'python run_script.py',
        c['is_debug'],
        '${TARGETS[0]}',
        'create_lasso_proposer.py',
        '--density-parametric',
        DENSITY,
        '--proposer-batches',
        ','.join([str(b) for b in batches]),
        '--proposer-cv 3',
        '--proposer-alphas 30',
        '--seed',
        c['seed'],
	'--out-file ${TARGETS[0]}',
	'--log-file ${TARGETS[1]}']
    return env.Command(
        targets,
        [],
        ' '.join(map(str, cmd)))

nest.add_aggregate('approval_hists', list)

@nest.add_target_with_env(localenv)
def run_adversary_approval(env, outdir, c):
    targets = [
        join(outdir, 'adversary_approval_hist.pkl'),
        join(outdir, 'adversary_adversarial_nature.pkl'),
        join(outdir, 'adversary_approval_hist_log.txt'),
    ]
    c['approval_hists'].append(targets[0])
    cmd = [
        'python run_script.py',
        c['is_debug'],
        '${TARGETS[0]}',
        'run_approval.py',
        '--seed',
        c['seed'],
        '--nature-file ${SOURCES[0]}',
        '--proposer-file ${SOURCES[1]}',
        '--policy-name TTestApproval',
        '--ci-alpha',
        CI_ALPHA,
	'--out-file ${TARGETS[0]}',
	'--out-nature-file ${TARGETS[1]}',
	'--log-file ${TARGETS[2]}']

    sources = [c['create_nature'][0], c['create_proposer'][0]]
    return env.Command(
        targets,
        sources,
        ' '.join(map(str, cmd)))


@nest.add_target_with_env(localenv)
def run_meta_exp(env, outdir, c):
    targets = [
        join(outdir, 'meta_exp_approval_hist.pkl'),
        join(outdir, 'meta_exp_approval_hist_log.txt'),
    ]
    c['approval_hists'].append(targets[0])
    cmd = [
        'python run_script.py',
        c['is_debug'],
        '${TARGETS[0]}',
        'run_approval.py',
        '--seed',
        c['seed'],
        '--control-error-factor',
        CONTROL_FACTOR,
        '--constraint-factor',
        CONSTRAINT_FACTOR,
        '--ci-alpha',
        CI_ALPHA,
        '--nature-file ${SOURCES[0]}',
        '--proposer-file ${SOURCES[1]}',
        '--policy-name MetaExpWeighting',
	'--out-file ${TARGETS[0]}',
	'--log-file ${TARGETS[1]}']

    sources = [c['run_adversary_approval'][1], c['create_proposer'][0]]
    return env.Command(
        targets,
        sources,
        ' '.join(map(str, cmd)))

