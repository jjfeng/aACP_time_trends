import os

from os.path import join
from nestly.scons import SConsWrap
from nestly import Nest
from SCons.Script import Environment, Command, AddOption
import numpy as np

Import('env')
localenv = env.Clone()

nest = SConsWrap(Nest(), localenv['output'], alias_environment=localenv)

DENSITY = "gaussian"
HUMAN_LOSS = 0.03
INIT_BATCH_SIZE = 30
NUM_P = 40
BATCH_SIZE = 60
NUM_BATCHES = 50

nest.add(
    'drift_speed',
    [0.05],
    label_func=lambda c: 'drift_speed_%.2f' % c)

nest.add(
    'drift_prob',
    [0.1],
    label_func=lambda c: 'drift_pr_%.2f' % c)

nest.add(
    'seed',
    range(1),
    label_func=lambda c: 'seed_%d' % c)

@nest.add_target_with_env(localenv)
def create_nature(env, outdir, c):
    targets = [
        join(outdir, 'nature.pkl'),
        join(outdir, 'nature_log.txt')]
    cmd = [
        'python create_fixed_nature.py',
        '--density-parametric',
        DENSITY,
        '--first-batch',
        INIT_BATCH_SIZE,
        '--batch-size',
        BATCH_SIZE,
        '--batch-incr 0',
        '--y-sigma 0.15',
        '--coef-drift',
        c['drift_speed'],
        '--prob-coef-drift',
        c['drift_prob'],
        '--personality unbiased',
        '--num-batches',
        NUM_BATCHES,
        '--num-p',
        NUM_P,
        '--seed',
        c['seed'],
	'--out-file ${TARGETS[0]}',
	'--log-file ${TARGETS[1]}']
    return env.Command(
        targets,
        [],
        ' '.join(map(str, cmd)))

@nest.add_target_with_env(localenv)
def create_proposer(env, outdir, c):
    # TODO: create a lasso proposer that only trains on the most recent data
    targets = [
        join(outdir, 'proposer.pkl'),
        join(outdir, 'proposer_log.txt')]
    cmd = [
        'python create_lasso_proposer.py',
        '--density-parametric',
        DENSITY,
        '--proposer-cv 3',
        '--proposer-alphas 10',
        '--proposer-batches 2,4,10',
        '--seed',
        c['seed'],
	'--out-file ${TARGETS[0]}',
	'--log-file ${TARGETS[1]}']
    return env.Command(
        targets,
        [],
        ' '.join(map(str, cmd)))

nest.add(
    'eta',
    [0.5],
    label_func=lambda c: 'eta_%.2f' % c)

@nest.add_target_with_env(localenv)
def run_meta_exp(env, outdir, c):
    targets = [
        join(outdir, 'meta_exp_approval_hist.pkl'),
        join(outdir, 'meta_exp_approval_hist_log.txt'),
    ]
    cmd = [
        'python run_approval.py',
        '--seed',
        c['seed'],
        '--eta',
        c['eta'],
        '--nature-file ${SOURCES[0]}',
        '--proposer-file ${SOURCES[1]}',
        '--policy-name MetaExpWeighting',
	'--out-file ${TARGETS[0]}',
	'--log-file ${TARGETS[1]}']

    sources = [c['create_nature'][0], c['create_proposer'][0]]
    return env.Command(
        targets,
        sources,
        ' '.join(map(str, cmd)))

@nest.add_target_with_env(localenv)
def plot_meta_exp(env, outdir, c):
    targets = [
        join(outdir, 'meta_exp_approval_hist_loss.png'),
        join(outdir, 'meta_exp_approval_hist_human.png'),
    ]
    cmd = [
        'python plot_history.py',
        '--policy-name MetaExpWeighting',
	'--history-file ${SOURCES[0]}',
	'--loss-plot ${TARGETS[0]}',
	'--human-plot ${TARGETS[1]}']

    return env.Command(
        targets,
        c['run_meta_exp'],
        ' '.join(map(str, cmd)))


nest.add(
    'alpha',
    [0.5],
    label_func=lambda c: 'alpha_%.2f' % c)

@nest.add_target_with_env(localenv)
def run_online(env, outdir, c):
    targets = [
        join(outdir, 'online_approval_hist.pkl'),
        join(outdir, 'online_approval_hist_log.txt'),
    ]
    cmd = [
        'python run_approval.py',
        '--seed',
        c['seed'],
        '--eta',
        c['eta'],
        '--alpha',
        c['alpha'],
        '--nature-file ${SOURCES[0]}',
        '--proposer-file ${SOURCES[1]}',
        '--policy-name MarkovHedge',
	'--out-file ${TARGETS[0]}',
	'--log-file ${TARGETS[1]}']

    sources = [c['create_nature'][0], c['create_proposer'][0]]
    return env.Command(
        targets,
        sources,
        ' '.join(map(str, cmd)))

